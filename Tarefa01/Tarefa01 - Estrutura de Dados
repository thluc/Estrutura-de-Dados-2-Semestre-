#include "iostream"
#include "math.h"
using namespace std;
int main() {
  const char* nome[] = {"Sarah Lemes", "Ricardo Jafé"};
  double salario[] = {12000, 10243.20};
  int idade[]={30,45};
  int x = salario[0] * 1.1;
  double y = salario[1] * 1.1;
  std::cout << "Nome: " << nome[0] <<endl;
  std::cout << "Idade: " << idade[0] <<endl;
  std::cout << "Salário anterior: " << salario[0] << " - Salário novo (com um aumento de 10%): " << x <<endl;
  std::cout << "Nome: " << nome[1] <<endl;
  std::cout << "Idade: " << idade[1] <<endl;
  std::cout << "Salário anterior: " << salario[1] << " - Salário novo (com um aumento de 10%): " << y <<endl;
}