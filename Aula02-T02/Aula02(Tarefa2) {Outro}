#include "iostream"
#include "cstdlib"
#include "stdio.h"
#include "iomanip"

using namespace std;

int main () {

int idade[] = {19, 35, 40, 23, 26}; 
string nome[] = {};

cout << "Digite cinco nomes: " << endl;
getline (cin, nome[0]);
  cout << "Segundo: " << endl;
getline (cin, nome[1]);
  cout << "Terceiro: " << endl;
getline (cin, nome[2]);
  cout << "Quarto: " << endl;
getline (cin, nome[3]);
  cout << "Quinto: " << endl;
getline (cin, nome[4]);

  {  int maior, menor;
    int tot = sizeof(idade)/sizeof(int);
    for (int i = 0; i< tot; i++)
      {
        if ( idade[i] > maior || i == 0 ) maior = idade[i];
        if ( idade[i] < menor || i == 0 ) menor = idade[i]; 
        }
    cout << "Pessoa com maior idade: " << nome[3] << "\nMaior:" << maior << endl;
    cout << "Pessoa com menor idade: " << nome[1] << "\nMenor: " << menor << endl;
    cout << "MÃ©dia das idades: " << tot << endl;

    }
  }